<div class="container">
  <div class="col-md-12 text-center">
    <header>
      <h1 class="main-title"><span><%= @note.title %></span></h1>
    </header>
    <div class="wrap-pencil">
      <div class="pencil-tip">
        <div class="graphite"></div>
      </div>
      <div class="pencil-body"><span></span></div>
      <div class="pencil-ereaser-keeper"></div>
      <div class="pencil-ereaser"></div>
      <div class="pencil-shadow"></div>
    </div>
  </div>
 
    <div class="dummy-text">
      <p><%= sanitize @note.content %></p>
    </div>
    <div class="text-center">
      <p><%= link_to 'Edit', edit_note_path(@note) %> | <%= link_to 'Delete', note_path(@note), method: :delete, data: { confirm: "Are you sure?" } %></p>
    </div>
  </div>
</div>