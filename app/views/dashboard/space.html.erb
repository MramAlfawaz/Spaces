 <%= javascript_pack_tag 'dashboard' %>
        <%= javascript_pack_tag 'index' %>
    <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track': 'reload' %>
<div id="dashboard-container">
  <div class="leftside-menu">
    <div class="avatar">
            <% if user_signed_in? %> 
      <div class="icon"><p><%= current_user.name.first() %></p></div>
      <p> Hello, <%= current_user.name %> </p>
      <% end %>
    </div>
    <nav class="menu">
      <%# <li class="active1"><a href="/">Space</a></li>
      <li> <a href="">DASHBOARD</a></li>
      <li><a href="">LOGOUT</a></li> %>
      <li><a href="">EDIT PROFILE</a></li>
    </nav>
  </div>
  <div class="main-grid">
    <div class="item one">
      <h1 id="spacetime" class="timespace"></h1>
      <h1 id="spacegreeting"></h1>
      <br>
      <h2 id="spacedate"></h2>
    </div>
    <div class="item two">
      <div class="music"> <p> <i class="fas fa-pen"></i>  NOTES </p></div>
      <div class="info">
         <% @notes.each do |note|%>
     <label class="todo">
          <div class="todo-switch1"></div>
          <%= link_to note.title, note %>   
              <% end %> 
        </label>
        <br> <br><br>
           <label class="todonote">
           <%= link_to "Add note ", new_note_path %> 
        </label> 
        <label class="todonote">
              <%= link_to " All notes", notes_path  %> 
        </label>  
      </div>
    </div>
    <div class="item three">
      <h2><h4 id="weather" class="h2home">  </h4></h2>
      <div class="weather">
 
      </div>
    </div>
    <div class="item four">
      <h1 id="spacedate"></h1>
      <p><a>no events today</a></p>
    </div>
    <div class="item five">
      <div class="rooms--top">
        <p> <i class="fab fa-chrome"></i> Dily Websites</p>
      </div>
      <div class="rooms">
        <div class="rooms--btns">
          <ul>
        <% @favorites.each do |favorite|%>
          <li > 
                <%= link_to (favorite.name), "#{favorite.url}",
                  target: "_blank" %>   
          </li>
        <% end %>
      <li> 
        <label>
         <%= link_to "", new_favorite_path, class:  "glyphicon glyphicon-plus"  %> 
        </label>  
      </li>
    </ul>
        </div>
      </div>
    </div>
 <div class="item six">
      <div class="reminders">
        <p><i class="fas fa-clipboard-check"></i> TO-DO LIST</p>
        <div class="reminder--btns">
          <% @todo_lists.each do |todo_list|%>
        </div>
      </div>
      <div class="reminders--list">
        <label class="todo">
          <div class="todo-switch"></div>
          <span class="todo-label"> 
          <%= link_to todo_list.title, todo_list %> 
              <% end %> 
           </span>
        </label>
        <br> <br><br>
        <label class="todo">
          <%= link_to "View lists", todo_lists_path  %> 
        </label> 
        <label class="todo">
          <%= link_to "Add new list", new_todo_list_path %> 
        </label>        
      </div>
    </div>
  </div>
</div>
